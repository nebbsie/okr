/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "types": [
      "jasmine"
    ]
  },
  "paths": {
    "@assets/*": ["src/assets/*"],
    "@components/*": ["src/components/*"],
    "@directives/*": ["src/directives/*"],
    "@pipes/*": ["src/pipes/*"],
    "@services/*": ["src/services/*"],
    "@ui/*": ["src/ui/*"],
    "@utils/*": ["src/utils/*"],
    "@env/*": ["src/environments/*"]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
